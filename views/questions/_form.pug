  input.form-control(type="file", name="poster", accept="image/gif, image/jpeg, imgage/png, image/pdf")

.form-group
  label(for='img') Image
  input.form-control(type="file", name="img")

.form-group
  label(for="tags") Tags
  input.form-control(type="text", name="tags", placeholder="태그를 공백으로 구분하여 입력해주세요", value=question.tags ? question.tags.join(" ") : "")
